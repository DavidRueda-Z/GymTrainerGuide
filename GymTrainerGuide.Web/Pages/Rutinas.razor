@page "/rutinas"
@using GymTrainerGuide.Web.Repositories
@using GymTrainerGuide.Shared.Entities
@inject RutinaRepository repo
@inject IRepository repo


<h3>Rutinas de entrenamiento</h3>

@if (rutinas == null)
{
    <p><em>Cargando...</em></p>
}
else if (!rutinas.Any())
{
    <p>No hay rutinas registradas.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Músculo</th>
                <th>Dificultad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in rutinas)
            {
                <tr>
                    <td>@r.Nombre</td>
                    <td>@r.Musculo</td>
                    <td>@r.Dificultad</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Rutina>? rutinas;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await repo.Get<List<Rutina>>("Rutinas");
            if (!response.Error)
                rutinas = response.Response!;
            else
                rutinas = new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener rutinas: {ex.Message}");
            rutinas = new();
        }
    }
}
